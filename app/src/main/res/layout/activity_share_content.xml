<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Chat.ShareContentActivity">

    <EditText
        android:id="@+id/search_users_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="45dp"
        android:inputType="text"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/hint"
        android:background="@drawable/custom_edit_register_new"
        android:layout_margin="5dp"
        android:hint="@string/search_with_dots"
        tools:ignore="Autofill" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_users_share"
        android:layout_below="@id/search_users_share"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>