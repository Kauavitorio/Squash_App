<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="1dp"
    android:maxHeight="80dp"
    android:layout_height="wrap_content">

    <!-- Container Main -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:paddingStart="15dp"
        android:paddingEnd="10dp"
        tools:ignore="UselessParent">

        <!-- User Icon Image -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image_users"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher" />

        <!-- Text UserName -->
        <TextView
            android:id="@+id/user_name_users"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/profile_image_users"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <!-- Image Verification Level -->
        <ImageView
            android:id="@+id/verification_ic_user_chat"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@+id/user_name_users"
            android:src="@drawable/ic_verified_account"
            tools:ignore="ContentDescription" />

        <!-- Image Status -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_status_user"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_below="@id/user_name_users"
            android:layout_marginStart="-12dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@id/profile_image_users"
            android:src="@mipmap/ic_launcher"
            android:visibility="visible"
            app:civ_border_color="@color/status_off"
            app:civ_border_width="10dp" />

        <!-- Text Last message -->
        <TextView
            android:id="@+id/last_seen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_name_users"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/profile_image_users"
            android:maxLength="40"
            android:maxLines="1"
            android:textSize="13sp"
            tools:text="KauÃ£ Vitorio"
            android:textColor="@color/hint" />

        <!-- Card un read message -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_no_read_ic"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/base_color"
            app:cardCornerRadius="10dp" />

        <!-- Image Pined chat -->
        <ImageView
            android:id="@+id/ic_pinned_chat"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_pinned"
            android:visibility="gone"
            tools:ignore="ContentDescription" />

    </RelativeLayout>

</RelativeLayout>