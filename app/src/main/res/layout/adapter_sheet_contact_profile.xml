<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/adapter_sheet_contact_profile"
    android:layout_height="wrap_content">

    <!-- Container Body -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_media_action"
        android:padding="10dp">

        <!-- Btn Close -->
        <ImageView
            android:id="@+id/close_contact_profile"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_close_simple_white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <!-- Container Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/close_contact_profile"
            tools:layout_editor_absoluteX="13dp">

            <!-- Email -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="UselessParent">

                <!-- Email Title -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/email_address"
                    android:textSize="16sp"
                    android:textColor="@color/white"/>

                <!-- User Email -->
                <TextView
                    android:id="@+id/txt_email_contact_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="35dp"
                    android:text="@string/email_address"
                    android:layout_marginTop="2dp"
                    android:textSize="16sp"
                    android:textStyle="italic|bold"
                    android:textColor="@color/white"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>